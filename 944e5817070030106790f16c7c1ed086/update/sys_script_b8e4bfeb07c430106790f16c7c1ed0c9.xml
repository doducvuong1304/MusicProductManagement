	var rightnow = new GlideDateTime();
	var releaseDate = new GlideDateTime(current.release_date);
	
	if(releaseDate.before(rightnow)){
		gs.addErrorMessage("Release Date cannot be in the past. Your request has not been saved to the database.");
		current.setAbortAction(true);
	}
	var today = rightnow.getLocalDate();
	var istoday = releaseDate.getLocalDate();

	if(today.compareTo(istoday) == 0){
		gs.addErrorMessage("You cannot submit because Release Date field is today.");
		current.setAbortAction(true);
	}

})(current, previous);]]></script>
